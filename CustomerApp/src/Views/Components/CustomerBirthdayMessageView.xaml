<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CustomerApp.src.Views.Components.CustomerBirthdayMessageView"
    >
    
    <Frame Padding="20" BackgroundColor="Red" >
        <Label 
            Text="{Binding DateOfBirth, Converter={StaticResource DateToDeltaDays}, StringFormat='Birthday is comming in {0} days'}" 
            TextColor="White" 
            VerticalTextAlignment="Center"
            HorizontalTextAlignment="Center"
        />
    </Frame>
    
</ContentView>
