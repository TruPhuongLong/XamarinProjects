<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:CustomerApp.src.Views.CustomRenderer"
    x:Class="CustomerApp.src.Views.Components.ReviewPhoneNumber"
    x:Name="ReviewPhoneNumber"
    >

    <Grid x:Name="mainGrid" BindingContext="{Binding Source={x:Reference ReviewPhoneNumber}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" x:Name="labelPhoneNumber" FontSize="Large" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        <local:CustomButton Grid.Column="1" Text="Next" Clicked="OnNextClicked" WidthRequest="{Binding SizeButton}" HeightRequest="60"/>
    </Grid>
    
</ContentView>
